<?xml version="1.0" encoding="UTF-8"?>
<KaganRoot>
    
    <!-- 键值存放表 -->
    <!-- 索引表结构
        id
        HashKey
    -->
    <IndexTable name="索引表名称" />
    
    <!-- 数据存放表 -->
    <!-- 网页数据表结构
         id
         Title
         Link
         PageContent
         ComeFrom
         PostTime
    -->
    <DataTable name="数据表名称" />
    
    <!-- 读取数据的线程数 -->
    <ReadThreads value="5" />
    
    <!-- 写入数据的线程数 -->
    <WriteDbThreads value="5" />
    
    <!-- 网页信息数据队列大小 -->
    <DequeSize value="100" />
    
    <!-- 传输数据队列大小 -->
    <QueueSize value="200" />

    <!-- 配置需要抓取信息的网站 -->
    <WebsiteList>
        <website name="163">
            <DailySize>100</DailySize>
            <url>http://www.163.com</url>
            <regex>http://(lady|war|money|home|bbs\.news|edu|news|tech|sports)\.163\.com/\d+/\d+/\d+/([a-zA-Z0-9]+)\.(html)</regex>
        </website>
    </WebsiteList>
</KaganRoot>