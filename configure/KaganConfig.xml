<?xml version="1.0" encoding="UTF-8"?>
<KaganRoot>
    
    <!-- 键值存放表 -->
    <!-- 索引表结构
        id
        HashKey
    -->
    <IndexTable name="" />
    
    <!-- 数据存放表 -->
    <!-- 网页数据表结构
         id
         Title
         Link
         PageContent
         ComeFrom
         PostTime
    -->
    <DataTable name="" />
    
    <!-- 连接超时后，重新连接的次数 -->
    <RetryTimes value="10" />
    
    <!-- 每个网站读取数据的线程数 -->
    <ReadThreads value="3" />
    
    <!-- 写入数据的线程数 -->
    <WriteDbThreads value="3" />
    
    <!-- 网页信息数据队列大小 -->
    <DequeSize value="200" />
    
    <!-- 传输数据队列大小 -->
    <QueueSize value="200" />
    
    <!-- 配置需要抓取信息的网站 -->
    <WebsiteList>
        <website name="sun0769">
            <url>http://news.sun0769.com/</url>
            <regex>http://news.sun0769.com/(.*?\.shtml)</regex>
            <handler>org.kagan.handler.PageInfoHandler</handler>
            <charset>GBK</charset>
        </website>
        <website name="凤凰网">
            <url>http://www.ifeng.com/</url>
            <regex>http://news\.ifeng\.com/([^\"\'\?]+)\.(shtml)</regex>
            <handler>org.kagan.handler.PageInfoHandler</handler>
            <charset>UTF-8</charset>
        </website>
        <website name="163">
            <url>http://www.163.com</url>
            <regex>http://([a-zA-Z0-9/]+)\.163\.com/\d+/\d+/\d+/([a-zA-Z0-9]+)\.(html)</regex>
            <handler>org.kagan.handler.PageInfoHandler</handler>
            <charset>UTF-8</charset>
        </website>
    </WebsiteList>
</KaganRoot>