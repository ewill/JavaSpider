<?xml version="1.0" encoding="UTF-8"?>
<KaganRoot>
    
    <!-- 键值存放表 -->
    <KeyTable name="jobcn90_other..tpagekeys" />
    
    <!-- 数据存放表 -->
    <DataTable name="jobcn90_other..tpagedata" />
    
    <!-- 写入数据的线程数 -->
    <WriteDbThreads value="5" />
    
    <!-- 数据队列大小 -->
    <QueueSize value="100" />

    <!-- 配置需要抓取信息的网站 -->
    <WebsiteList>
        <website name="jobcn">
            <DailySize>100</DailySize>
            <url>http://info.jobcn.com/</url>
            <regex>http://info\\.jobcn\\.com/article/([0-9]+)$</regex>
        </website>
        
        <website name="163">
            <DailySize>100</DailySize>
            <url>http://www.163.com</url>
            <regex>http://(news|tech|sports)\\.163\\.com/(.*)\\.(html)$</regex>
        </website>
    </WebsiteList>
</KaganRoot>